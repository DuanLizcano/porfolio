---
import NextJSIcon from "./icons/Next.astro";
import TailwindIcon from "./icons/TailwindCss.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJSIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
};

const PROJECTS = [
  {
    title: "Project 1",
    description: "This is a description of project 1",
    link: "#",
    github: "#",
    image: "https://via.placeholder.com/150",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Project 2",
    description: "This is a description of project 2",
    link: "#",
    github: "#",
    image: "https://via.placeholder.com/150",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Project 3",
    description: "This is a description of project 3",
    link: "#",
    github: "#",
    image: "https://via.placeholder.com/150",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex -row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
